<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_mainToMain"
            android:text="button to main"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/button_mainToSingleTask"
            android:text="button to SingleTask"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/button_mainToSingleInstance"
            android:text="button to SingleInstance"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/button_clearAll"
            android:text="Clear All"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>